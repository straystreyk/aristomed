<%- include('../components/header') %>
<div class="container">
    <div class="row">
        <form class="form_create col s12" >
            <div class="row">
                <div class="input-field col s12">
                    <input required id="name" value="<%=currentDirection.name%>" name="name" type="text" class="validate form_input">
                    <label for="name">Имя</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <input required id="urlName" value="<%=currentDirection.urlName%>" name="urlName" type="text" class="validate form_input">
                    <label for="urlName">Название в url страницы</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <input required id="doctorDirectionName" value="<%=currentDirection.doctorDirectionName%>" name="doctorDirectionName" type="text" class="validate form_input">
                    <label for="doctorDirectionName">Название должности врача по направлению</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <input id="color" value="<%=currentDirection.color%>" name="color" type="text" class="validate form_input">
                    <label for="color">Цвет направления в HEX</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <input id="hoverColor" value="<%=currentDirection.hoverColor%>" name="hoverColor" type="text" class="validate form_input">
                    <label for="hoverColor">Цвет при наведении в HEX</label>
                </div>
            </div>
            <input type="hidden" value="<%=currentDirection._id%>" name="_id" class="form_input">
            <button class="waves-effect waves-light btn-small" type="submit">Редактировать</button>
        </form>
    </div>
</div>
<div id="modal1" class="modal">
    <div class="modal-content">
    </div>
</div>
<script>
    window.url = <%-JSON.stringify(fetch_url)%>
</script>
<%- include('../components/footer') %>