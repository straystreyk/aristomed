<%- include('../components/header') %>
<div class="container">
    <div class="row">
        <form class="form_create col s12" >
            <div class="row">
                <div class="input-field col s12">
                    <input required id="name" name="name" type="text" class="validate form_input">
                    <label for="name">Имя</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <input required id="urlName" name="urlName" type="text" class="validate form_input">
                    <label for="urlName">Название в url страницы</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <input required id="doctorDirectionName" name="doctorDirectionName" type="text" class="validate form_input">
                    <label for="doctorDirectionName">Название должности врача по направлению</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <input id="color" name="color" type="text" class="validate form_input">
                    <label for="color">Цвет направления в HEX</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <input id="hoverColor" name="hoverColor" type="text" class="validate form_input">
                    <label for="hoverColor">Цвет при наведении в HEX</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <textarea name="description" id="description" type="text" class="validate materialize-textarea form_input"></textarea>
                    <label for="description">Описание на посадочной странице</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <input id="slogan" name="slogan" type="text" class="validate form_input">
                    <label for="slogan">Слоган</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <input id="reasons" name="reasons" type="text" class="validate form_input">
                    <label for="reasons">Решаемые проблемы</label>
                    <span class="helper-text">Перечислить через запятую</span>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <textarea name="descriptionReasons" id="descriptionReasons" type="text" class="validate materialize-textarea form_input"><%-currentDirection.description%></textarea>
                    <label for="descriptionReasons">Описание на посадочной странице (под решаемыми проблемами)</label>
                </div>
            </div>
            <div class="row">
                <div class="file-field input-field">
                    <div class="btn">
                        <span>Фото на посадочной страницы направления</span>
                        <input type="file" data-type="directions" name="file" class="file_input">
                    </div>
                    <div class="file-path-wrapper">
                        <input class="file-path validate" type="text">
                    </div>
                </div>
            </div>
            <input name="image" value="" class="image_url_input form_input">
            <button type="submit" class="waves-effect waves-light btn-small">Создать направление</button>
        </form>
    </div>
</div>
<div id="modal1" class="modal">
    <div class="modal-content">
    </div>
</div>
<script>
    window.url = <%-JSON.stringify(fetch_url)%>
</script>
<%- include('../components/footer') %>